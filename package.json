{
  "name": "dapabe-assist-desktop",
  "productName": "AssistMeButton",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "author": {
    "name": "Daniel Patricio Becerra (dapabe)",
    "email": "dapadev@hotmail.com"
  },
  "homepage": "https://github.com/dapabe/dapabe-assist-api",
  "contributors": [
    "Daniel Patricio Becerra"
  ],
  "maintainers": [
    "Daniel Patricio Becerra"
  ],
  "main": "./out/main/index.js",
  "scripts": {
    "clean": "git clean -xdf .turbo out node_modules",
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview --noSandbox",
    "dev": "xvfb-maybe electron-vite dev --watch --noSandbox",
    "prebuild": "cp -R ../../packages/assist-api/build .internals/assist-api",
    "build": "npm run typecheck && electron-vite build --config electron-builder.config.js",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win --config electron-builder.config.js",
    "build:mac": "electron-vite build && electron-builder --mac --config electron-builder.config.js",
    "build:linux": "electron-vite build && electron-builder --linux --config electron-builder.config.js"
  },
  "dependencies": {
    "@denzere/assist-api": "^0.0.7",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@hookform/resolvers": "catalog:hookform",
    "@tanstack/react-query": "4.29.14",
    "@tanstack/react-router": "1.115.3",
    "@trpc/client": "10.33.1",
    "@trpc/react-query": "10.33.1",
    "@trpc/server": "10.33.1",
    "better-sqlite3": "catalog:sqlite",
    "drizzle-orm": "catalog:drizzle",
    "electron-trpc": "0.7.1",
    "electron-updater": "^6.3.9",
    "lucide-react": "catalog:icons",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "react-hook-form": "catalog:hookform",
    "react-i18next": "15.5.1",
    "zod": "catalog:utils",
    "zod-validation-error": "3.4.0",
    "zustand": "catalog:utils"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@tailwindcss/vite": "catalog:tailwind",
    "@tanstack/router-devtools": "1.134.13",
    "@tanstack/router-plugin": "1.133.32",
    "@types/better-sqlite3": "catalog:sqlite",
    "@types/node": "catalog:node",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "@vitejs/plugin-react": "^4.3.4",
    "daisyui": "^5.3.10",
    "electron": "38.1.2",
    "electron-builder": "25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "prettier": "catalog:prettier",
    "tailwind-merge": "catalog:tailwind",
    "tailwindcss": "catalog:tailwind",
    "typescript": "5.8.2",
    "vite": "catalog:vite",
    "xvfb-maybe": "0.2.1"
  }
}
